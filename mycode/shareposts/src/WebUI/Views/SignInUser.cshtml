@{
  ViewData["Title"] = "Sign In User";
}

<div class="page-container-small">
  <div class="page-header">
    <h1>Welcome back</h1>
    <p>Please inform your credentials to sign in</p>
  </div>

  <form method="POST" action="/Users/SignIn" class="form">
    <!-- E-mail -->
    <div class="form-group">
      <label>E-mail</label>
      <input name="email" type="text" class="form-input" />
      <!-- TODO: Add error message here -->
    </div>

    <!-- Password -->
    <div class="form-group">
      <label>Password</label>
      <input name="password" type="password" class="form-input" />
      <!-- TODO: Add error message here -->
    </div>

    <button class="btn btn-primary">Submit Credentials</button>
  </form>

  <p>Don't have an account yet? Then <a href="/Users/SignUp">Sign Up</a>.</p>
</div>
