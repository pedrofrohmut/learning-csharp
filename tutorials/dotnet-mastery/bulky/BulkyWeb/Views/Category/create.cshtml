@model CategoryModel

<header class="add-category__header content-header">
    <h1 class="page-title">Create Category</h1>
    <a asp-controller="Category" asp-action="Index">
      <button class="secondary-button">Back to List</button>
    </a>
</header>

<form method="post">
  <div class="form-group">
    <label>Category Name</label>
    <input asp-for="Name" type="text" />
  </div>
  <div class="form-group">
    <label>Display Order</label>
    <input asp-for="DisplayOrder" type="number" />
  </div>
  <button type="submit" class="primary-button">Create</button>
</form>
